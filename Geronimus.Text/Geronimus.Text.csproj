<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Geronimus.Text</PackageId>
    <Version>0.1.3-alpha</Version>
    <FileVersion>0.1.3.0</FileVersion>
    <Authors>Graham Brown</Authors>
    <Copyright>Â© Graham Brown 2022</Copyright>
    <Company>geronimus</Company>
    <Title>Geronimus.Text</Title>
    <Description>Reusable logic for handling text values.</Description>
    <PackageProjectUrl>https://github.com/geronimus/DotnetText</PackageProjectUrl>
    <PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/geronimus/DotnetText.git</RepositoryUrl> 
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../LICENCE" Pack="true" PackagePath=""/>
    <None Include="../README.md" Pack="true" PackagePath=""/>
  </ItemGroup>

<!-- Required for Nuget Source Link / Health Check -->
<PropertyGroup>
  <IncludeSymbols>true</IncludeSymbols>
  <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  <Deterministic>true</Deterministic>
</PropertyGroup>

<ItemGroup>
  <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All"/>
</ItemGroup>

</Project>
